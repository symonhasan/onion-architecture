@model OA.Web.Models.TouristPlaceViewModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<h4>Tourist Place</h4>
<br />
<div class="row">
    <div class="col-sm-6">
        <table class="table table-bordered  details-table">
            <tbody>
                <tr>
                    <td colspan="2" class="text-center">
                        <img src="~/image/@Model.Image" height="240" />
                    </td>
                </tr>
                <tr>
                    <td class="td-title">Name</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td class="td-title">Address</td>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <td class="td-title">Rating</td>
                    <td>@Model.Rating</td>
                </tr>
                <tr>
                    <td class="td-title">Type</td>
                    <td>@Model.TypeName</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-sm-4 offset-sm-2">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label">Type</label>
                <select asp-for="TypeId" asp-items="ViewBag.Types" class="form-control"></select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" accept="image/*" class="form-control-file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Image" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<a asp-controller="Place" asp-action="CheckRedirection">Back To List</a>