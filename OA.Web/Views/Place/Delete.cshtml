@model OA.Web.Models.TouristPlaceViewModel
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>
<h4>Tourist Place</h4>
<hr />
<h5>Are you sure you want to delete this?</h5>
<div class="row">
    <div class="col-sm-4">
        <img src="~/image/@Model.Image" height="250" />
    </div>
</div>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Address</dd>
    <dt class="col-sm-2">Rating</dt>
    <dd class="col-sm-10">@Model.Rating</dd>
    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.TypeName</dd>
</dl>
<div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="CheckRedirection">Back to List</a>
    </form>
</div>